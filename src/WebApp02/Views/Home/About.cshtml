@model Person

@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<ul>
    <li>First: @Model.FirstName</li>
    <li>Last: @Model.LastName</li>
    <li>DOB: @Model.Birthdate.ToString("dd-MM-yyyy")</li>
</ul>

<form asp-controller="Home" asp-action="About" method="post">
    <div class="text-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>

    <div class="form-group">
        <label asp-for="FirstName">First: </label>
        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last: </label>
        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birthdate">DOB: </label>
        <input asp-for="Birthdate" class="form-control" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>
    <button class="btn btn-danger" type="submit" value="Submit">Submit</button>
</form>